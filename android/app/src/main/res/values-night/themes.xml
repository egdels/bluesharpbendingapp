<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BluesHarpBendingApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="borderColor">@color/white</item>
        <item name="channelBackgroundColor">@color/grey</item>
        <item name="drawBackgroundColor">@color/blue</item>
        <item name="blowBackgroundColor">@color/orange</item>
        <item name="overblowOverflowBackgroundColor">@color/magenta</item>
        <item name="channelTextColor">@color/black</item>
        <item name="drawTextColor">@color/black</item>
        <item name="blowTextColor">@color/black</item>
        <item name="buttonStrokeColor">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
         animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo_hell</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.BluesHarpBendingApp</item>
    </style>
</resources>